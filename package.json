{
  "name": "cloudflare-monorepo-template",
  "version": "1.0.0",
  "private": true,
  "description": "A reusable monorepo template for Cloudflare applications",
  "keywords": [
    "cloudflare",
    "workers",
    "monorepo",
    "turborepo",
    "pnpm",
    "typescript"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.25.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "deploy": "turbo run deploy",
    "gen": "turbo gen"
  },
  "devDependencies": {
    "@turbo/gen": "^2.6.0",
    "prettier": "^3.1.0",
    "turbo": "^2.6.0",
    "typescript": "latest"
  }
}
