{
  "name": "@repo/{{ kebabCase name }}",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "config:generate": "tsx scripts/generate-config.ts",
    "dev": "wrangler dev",
    "build": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
{{#if includeDatabase}}
    "@repo/db": "workspace:*",
{{/if}}
    "@repo/shared-types": "workspace:*",
    "@repo/wrangler-config": "workspace:*",
{{#if (eq workerType "http")}}
    "hono": "^4.0.0"
{{else if (eq workerType "both")}}
    "hono": "^4.0.0"
{{/if}}
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0",
    "wrangler": "^4.50.0"
  },
  "prettier": "@repo/prettier-config"
}
